@import url('https://fonts.cdnfonts.com/css/adventure-request');
@tailwind base;
@tailwind components;
@tailwind utilities;

@font-face {
	font-family: 'Adventure Request';
	src: url('https://fonts.cdnfonts.com/css/adventure-request');
	font-weight: normal;
	font-style: normal;
	font-display: swap;
}

* {
	font-family: 'HKGrotesk-Regular', Arial, sans-serif;
}

/* Import Adventure Request font */

/* Define @font-face for Adventure Request */

.hero-title,
.hero-title2,
.news-title {
	font-family: 'Adventure Request', sans-serif;
	text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

/* Other CSS rules can follow here */

html {
	scroll-behavior: smooth;
}

body {
	background: linear-gradient(#12447d, rgb(45, 118, 200));
	background-size: cover;
	/* background-position: center; */
	/* background-attachment: fixed; */
}

