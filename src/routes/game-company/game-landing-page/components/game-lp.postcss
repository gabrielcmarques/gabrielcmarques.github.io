.blurred-glass {
	background: rgba(255, 255, 255, 0);
	-webkit-backdrop-filter: blur(5px);
	backdrop-filter: blur(5px);
	border: 1px solid rgba(255, 255, 255, 0.25);
}

.div1 {
	animation-delay: 1.2s;
	animation-duration: 0.5s;
}
.div2 {
	animation-delay: 1.7s;
	animation-duration: 0.5s;
}
.div3 {
	animation-delay: 2s;
	animation-duration: 0.5s;
}
